{
  "name": "blue-vault",
  "version": "1.1.0",
  "description": "Decentralized savings vault protocol on Base",
  "scripts": {
    "test": "forge test -vv",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "build": "forge build",
    "clean": "forge clean",
    "deploy:testnet": "forge script script/Deploy.s.sol:DeployScript --rpc-url base_sepolia --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol:DeployScript --rpc-url base --broadcast --verify",
    "format": "forge fmt",
    "lint": "solhint 'src/**/*.sol' 'test/**/*.sol'"
  },
  "keywords": [
    "defi",
    "savings",
    "vault",
    "base",
    "ethereum",
    "foundry",
    "solidity"
  ],
  "author": "MarcusDavidG",
  "license": "MIT",
  "devDependencies": {
    "solhint": "^6.0.2"
  }
}
